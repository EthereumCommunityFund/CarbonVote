{
  "extends": "@pcd/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./public"]
    }
  },

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "es2019",
      "isolatedModules": false,
      "noEmit": false
    }
  }
}
